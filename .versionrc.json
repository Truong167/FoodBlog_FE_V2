{
  "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n",
  "types": [
    {
      "type": "feat",
      "section": "✨ Features"
    },
    {
      "type": "fix",
      "section": "🐛 Bug Fixes"
    },
    {
      "type": "docs",
      "section": "📚 Documentation"
    },
    {
      "type": "style",
      "section": "💄 Styles"
    },
    {
      "type": "refactor",
      "section": "♻️ Code Refactoring"
    },
    {
      "type": "perf",
      "section": "⚡ Performance Improvements"
    },
    {
      "type": "test",
      "section": "✅ Tests"
    },
    {
      "type": "build",
      "section": "🏗️ Build System"
    },
    {
      "type": "ci",
      "section": "👷 CI/CD"
    },
    {
      "type": "chore",
      "hidden": true
    }
  ],
  "parserOpts": {
    "headerPattern": "^(\\w+)/(\\w+):\\s+(.+)$",
    "headerCorrespondence": ["type", "scope", "subject"]
  },
  "releaseCommitMessageFormat": "chore(release): bump version to {{currentTag}}",
  "skip": {
    "bump": false,
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "tagPrefix": "v",
  "scripts": {
    "prebump": "echo 'Preparing release...'",
    "postbump": "echo 'Release completed!'"
  }
}
